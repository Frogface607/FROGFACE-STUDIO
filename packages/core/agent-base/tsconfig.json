{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@frogface/core-api-client": ["../api-client/src/index.ts"],
      "@frogface/core-api-client/*": ["../api-client/src/*"],
      "@frogface/core-knowledge-base": ["../knowledge-base/src/index.ts"],
      "@frogface/core-knowledge-base/*": ["../knowledge-base/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../api-client" },
    { "path": "../knowledge-base" }
  ]
}
