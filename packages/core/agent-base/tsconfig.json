{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@frogface/core-api-client": ["../api-client/src/index.ts"],
      "@frogface/core-api-client/*": ["../api-client/src/*"],
      "@frogface/core-knowledge-base": ["../knowledge-base/src/index.ts"],
      "@frogface/core-knowledge-base/*": ["../knowledge-base/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
